    <Style TargetType="Button" x:Key="closeButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource secondIconColor}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid x:Name="container">
                        <Border x:Name="border" Width="25" Height="25" Background="{TemplateBinding Background}" CornerRadius="34" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Canvas Width="{TemplateBinding FontSize}" Height="{TemplateBinding FontSize}">
                                <Path  Width="{TemplateBinding FontSize}" Height="{TemplateBinding FontSize}" Fill="{TemplateBinding Foreground}" Stretch="Uniform" Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Canvas>
                        </Border>
                    </Grid>
                    <!--<ControlTemplate.Triggers>
                        
                    </ControlTemplate.Triggers>-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Mouse.MouseEnter">
                <BeginStoryboard>
                    <Storyboard Storyboard.TargetProperty="Background.Color">
                        <ColorAnimation Duration="0:0:.3" To="{StaticResource red}"/>
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard Storyboard.TargetProperty="Foreground.Color">
                        <ColorAnimation Duration="0:0:.3" To="White"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="Mouse.MouseLeave">
                <BeginStoryboard>
                    <Storyboard Storyboard.TargetProperty="Background.Color">
                        <ColorAnimation Duration="0:0:.3" To="Transparent"/>
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard Storyboard.TargetProperty="Foreground.Color">
                        <ColorAnimation Duration="0:0:.3" To="{StaticResource secondIcon}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>
