<UserControl x:Class="ToDoProject.View.Components.TitledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoProject.View.Components"
             mc:Ignorable="d" d:DesignWidth="400"
             d:DesignHeight="64">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="title" VerticalAlignment="Top"  Style="{StaticResource MontsSemiBold14}"/>
        <local:CustomTextBox x:Name="textBox" Grid.Row="1" TextChanged="TextBox_TextChanged" MaxWidth="{Binding ElementName=mainGrid, Path=Width}"/>
    </Grid>
</UserControl>
