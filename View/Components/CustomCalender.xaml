<UserControl x:Class="ToDoProject.View.Components.CustomCalender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:unit="clr-namespace:ToDoProject.Classes"
             xmlns:james="https://jamesnet.dev/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoProject.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Border Padding="30, 25" CornerRadius="14" Background="{StaticResource CalendarBackgroundColor}">
            <james:JamesGrid Rows="*" ColumnCount="7">

                <unit:DaysOfWeek Text="SAT"/>
                <unit:DaysOfWeek Text="SUN"/>
                <unit:DaysOfWeek Text="MON"/>
                <unit:DaysOfWeek Text="TUE"/>
                <unit:DaysOfWeek Text="WED"/>
                <unit:DaysOfWeek Text="THU"/>
                <unit:DaysOfWeek Text="FRI"/>

                <unit:CalendarBox Margin="0,30,0,0" Grid.ColumnSpan="7">
                    <unit:CalendarBoxItem>1</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>2</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>3</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>4</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>5</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>6</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>7</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>8</unit:CalendarBoxItem>
                    <unit:CalendarBoxItem>9</unit:CalendarBoxItem>
                </unit:CalendarBox>
            </james:JamesGrid>
        </Border>
    </Grid>
</UserControl>
